{# Значения по умолчанию #}
{% set defaults = {
	"type": "text",
	"placeholder": "input"
} %}

{# Макрос компонента #}
{% macro appInput(opts = {
	"additionalClasses": "",
	"modifs": [],
	"type": "",
	"placeholder": ""
}) %}

	{# Подключение значений по умолчанию #}
	{% set opts = defaults | concatWithObject(opts) %}

	{# Код компонента #}
	<input class="{{ opts.modifs | classWithModifs("app-input") }} {{ opts.additionalClasses }}" type={{ opts.type }} placeholder={{ opts.placeholder }}>

{% endmacro %}