{# Подключение дочерних элементов #}
{% from "./elems/__arrow-btn/__arrow-btn.njk" import appPaginationArrowBtn %}
{% from "./elems/__page-btn/__page-btn.njk" import appPaginationPageBtn %}

{# Значения по умолчанию #}
{% set defaults = {} %}

{# Макрос компонента #}
{% macro appPagination(opts = {
	"additionalClasses": "",
	"modifs": []
}) %}

	{# Подключение значений по умолчанию #}
	{% set opts = defaults | concatWithObject(opts) %}
	{# Класс компонента #}
	{% set BLOCK = "app-pagination" %}

	{# Код компонента #}
	<div class="{{ opts.modifs | classWithModifs(BLOCK) }} {{ opts.additionalClasses }}">
		{{ appPaginationArrowBtn({
			"iconName": "arrow-left"
		}) }}

		<ul class="{{ BLOCK }}__pages">
			{{ appPaginationPageBtn({
				"additionalClasses": BLOCK + "__btn"
			}) }}
		</ul>

		{{ appPaginationArrowBtn({
			"iconName": "arrow-right"
		}) }}
	</div>

{% endmacro %}