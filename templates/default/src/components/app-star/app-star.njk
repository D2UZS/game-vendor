{# Значения по умолчанию #}
{% set defaults = {} %}

{# Макрос компонента #}
{% macro appStar(opts = {
	"additionalClasses": "",
	"modifs": []
}) %}

	{# Подключение значений по умолчанию #}
	{% set opts = defaults | concatWithObject(opts) %}

	{# Код компонента #}
	<div class="{{ opts.modifs | classWithModifs("app-star") }} {{ opts.additionalClasses }}"></div>

{% endmacro %}