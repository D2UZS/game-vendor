{# Значения по умолчанию #}
{% set defaults = {} %}

{# Макрос компонента #}
{% macro appStar(opts = {
	"additionalClasses": "",
	"modifs": []
}) %}

	{# Подключение значений по умолчанию #}
	{% set opts = defaults | concatWithObject(opts) %}

	{# Код компонента #}
	<div class="app-star {{ opts.modifs | generateModifs("app-star") -}} {{ opts.additionalClasses -}}"></div>

{% endmacro %}